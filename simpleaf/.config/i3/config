# Lockscreen
bindsym $mod+l exec "amixer set Master mute && pkill -RTMIN+10 i3blocks && i3lock -c 9657C7"

# Screen shot
bindsym $mod+Shift+s exec screengrab

# Screen Brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 15 && pkill -RTMIN+11 i3blocks # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 15 && pkill -RTMIN+11 i3blocks # decrease screen brightness

# Audio Media Keys
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 2%+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 2%- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 i3blocks

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

